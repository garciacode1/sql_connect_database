<Window x:Class="sql_connect_database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sql_connect_database"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40 "/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>

        </Grid.RowDefinitions>

        <Label Grid.Column="2" Content="IOT SOFTWARE COMPANY" HorizontalAlignment="Left" Margin="35,0,0,0" Grid.Row="1" VerticalAlignment="Center" FontWeight="ExtraBold" FontStyle="Italic"/>
        <Label Grid.Column="1" Content="SHOW FUNCTIONS" HorizontalAlignment="Left" Margin="58,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="122" FontWeight="Black" Height="27"/>
        <Label Grid.Column="3" Content="Add New Employee" HorizontalAlignment="Center" Margin="0,1,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <TextBox x:Name="Txt_Box_Id_Add_Employee" Grid.Column="3" HorizontalAlignment="Left" Margin="10,32,0,0" Grid.Row="2" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="Txt_Box_Givenname_Add_Employee" Grid.Column="3" HorizontalAlignment="Left" Margin="10,59,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Given Name" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Txt_Box_GrossSalary_Add_Employee" Grid.Column="3" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Gross Salary" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.577,1.529"/>
        <TextBox x:Name="Txt_Box_Familyname_Add_Employee" Grid.Column="3" HorizontalAlignment="Left" Margin="10,82,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Family Name" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5"/>
        <Label x:Name="Label_Dateofbirth_Add_Employee" Grid.Column="3" Content="Date of Birth:" HorizontalAlignment="Left" Margin="10,105,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <DatePicker x:Name="Datepicker_Add_Employee" Grid.Column="3" HorizontalAlignment="Left" Margin="118,105,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Button x:Name="Bttn_Add_New_Employee" Grid.Column="3" Content="Add New Employee" HorizontalAlignment="Left" Margin="53,90,0,0" Grid.Row="3" VerticalAlignment="Top" Height="40" Width="137" Click="Bttn_Add_New_Employee_Click"/>
        <Button x:Name="Bttn_Delete_Employee" Grid.Column="3" Content="Delete Employee" HorizontalAlignment="Left" Margin="53,141,0,0" Grid.Row="3" VerticalAlignment="Top" Width="137" Height="41"/>
        <Button x:Name="Bttn_Show_Employees_Information" Grid.Column="2" Content="Show All Employees Information" HorizontalAlignment="Left" Margin="31,10,0,0" Grid.Row="3" VerticalAlignment="Top" Height="40"/>
        <Button x:Name="Bttn_Update_Salary" Grid.Column="2" Content="Update salary of any employee" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Width="176" Height="41" Margin="35,68,0,0"/>
        <TextBox x:Name="Txt_Box_BranchID_Add_Employee" Grid.Column="3" HorizontalAlignment="Left" Margin="153,26,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Branch ID" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.311,0.467"/>
        <Button x:Name="Bttn_Show_Employee_Same_Branch" Grid.Column="1" Content="Show Employees Working For Same Branch" HorizontalAlignment="Center" Margin="0,53,0,0" Grid.Row="2" VerticalAlignment="Top" Width="240" Height="37"/>
        <TextBox x:Name="Txt_Box_BranchID_Same_Branch" Grid.Column="1" HorizontalAlignment="Left" Margin="83,27,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Branch ID" VerticalAlignment="Top" Width="72" Height="23"/>
        <Button x:Name="Bttn_Show_All_Sales_Employee" Grid.Column="1" Content="Show All Sales for Specific Employee" HorizontalAlignment="Center" Margin="0,128,0,0" Grid.Row="2" VerticalAlignment="Top" Width="216" Height="30"/>
        <TextBox x:Name="Txt_Box_ID_Specific_Employee" Grid.Column="1" HorizontalAlignment="Left" Margin="96,100,0,0" Grid.Row="2" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="46" RenderTransformOrigin="0.844,0.548" Height="18"/>
        <ListBox x:Name="Litst_Box_Display_functions" Grid.Column="2" Margin="10,10,10,10" Grid.Row="2" Background="LightGray" />
        <Button x:Name="Bttn_Show_Employees_Earn_More_Amount" Grid.Column="1" Content="Show Employees who earn $70.000+" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="216" Height="31"/>
        <Button x:Name="Bttn_Show_Info_Specific_Employee" Grid.Column="1" Content="Show Information of Specific Employee" HorizontalAlignment="Center" Margin="0,91,0,0" Grid.Row="3" VerticalAlignment="Top" Width="226" Height="38"/>
        <TextBox x:Name="Txt_Box_ID_Information_Employee" Grid.Column="1" HorizontalAlignment="Left" Margin="96,61,0,0" Grid.Row="3" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="59" Height="25"/>
        <TextBox x:Name="Txt_Box_ID_Update_Salary" Grid.Column="2" HorizontalAlignment="Left" Margin="35,125,0,0" Grid.Row="3" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="Txt_Box_NewSalary_Update_Salary" Grid.Column="2" HorizontalAlignment="Left" Margin="35,148,0,0" Grid.Row="3" TextWrapping="Wrap" Text="New Salary" VerticalAlignment="Top" Width="95"/>
        <TextBox x:Name="Txt_Box_Gender_Identity" Grid.Column="3" HorizontalAlignment="Left" Margin="10,143,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Gender Identity" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Txt_Box_Suprvisor_Id_Add_Employee" Grid.Column="3" HorizontalAlignment="Left" Margin="10,41,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Supervisor ID" VerticalAlignment="Top" Width="120"/>



    </Grid>


</Window>
