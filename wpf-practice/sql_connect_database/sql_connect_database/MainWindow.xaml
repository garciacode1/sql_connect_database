<Window x:Class="sql_connect_database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sql_connect_database"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40 "/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>

        </Grid.RowDefinitions>

        <Label Grid.Column="2" Content="IOT SOFTWARE COMPANY" HorizontalAlignment="Left" Margin="35,0,0,0" Grid.Row="1" VerticalAlignment="Center" FontWeight="ExtraBold" FontStyle="Italic"/>
        <Label Grid.Column="1" Content="SHOW FUNCTIONS" HorizontalAlignment="Left" Margin="58,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="122" FontWeight="Black" Height="27"/>
        <Label Grid.Column="3" Content="Add New Employee" HorizontalAlignment="Center" Margin="0,1,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="10,32,0,0" Grid.Row="2" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="60"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="10,59,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Given Name" VerticalAlignment="Top" Width="120"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="10,149,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Gross Salary" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.577,1.529"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="10,82,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Family Name" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5"/>
        <Label Grid.Column="3" Content="Date of Birth:" HorizontalAlignment="Left" Margin="10,105,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <DatePicker Grid.Column="3" HorizontalAlignment="Left" Margin="118,105,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Button Grid.Column="3" Content="Add New Employee" HorizontalAlignment="Left" Margin="50,21,0,0" Grid.Row="3" VerticalAlignment="Top" Height="40" Width="137"/>
        <Button Grid.Column="3" Content="Delete Employee" HorizontalAlignment="Left" Margin="50,0,0,0" Grid.Row="3" VerticalAlignment="Center" Width="137" Height="41"/>
        <Button Grid.Column="2" Content="Show All Employees Information" HorizontalAlignment="Left" Margin="31,10,0,0" Grid.Row="3" VerticalAlignment="Top" Height="40"/>
        <Button Grid.Column="2" Content="Update salary of any employee" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Width="176" Height="41" Margin="35,68,0,0"/>
        <TextBox Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="145,149,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Branch ID" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.311,0.467"/>
        <Button Grid.Column="1" Content="Show Employees Working For Same Branch" HorizontalAlignment="Center" Margin="0,53,0,0" Grid.Row="2" VerticalAlignment="Top" Width="240" Height="37"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="83,27,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Branch ID" VerticalAlignment="Top" Width="72" Height="23"/>
        <Button Grid.Column="1" Content="Show All Sales for Specific Employee" HorizontalAlignment="Center" Margin="0,128,0,0" Grid.Row="2" VerticalAlignment="Top" Width="216" Height="30"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="96,100,0,0" Grid.Row="2" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="46" RenderTransformOrigin="0.844,0.548" Height="18"/>
        <ListBox x:Name="display_functions" Grid.Column="2" Margin="10,10,10,10" Grid.Row="2"/>
        <Button Grid.Column="1" Content="Show Employees who earn $70.000+" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="216" Height="31"/>
        <Button Grid.Column="1" Content="Show Information of Specific Employee" HorizontalAlignment="Center" Margin="0,91,0,0" Grid.Row="3" VerticalAlignment="Top" Width="226" Height="38"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="96,61,0,0" Grid.Row="3" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="59" Height="25"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Margin="35,125,0,0" Grid.Row="3" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="71"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Margin="35,148,0,0" Grid.Row="3" TextWrapping="Wrap" Text="New Salary" VerticalAlignment="Top" Width="95"/>



    </Grid>


</Window>
